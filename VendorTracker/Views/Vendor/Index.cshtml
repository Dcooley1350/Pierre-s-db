@using VendorTracker.Models

<h1>Pierre's</h1>
<h2>Vendors:</h2>
@if(Model.Count == 0)
{
    <h3>No Vendors Here! Add some Vendors Pierre!</h3>
}
<ul>
@foreach(Vendor item in Model)
{
    <li><h3><a href="vendors/@item.Id">@item.VenName</a></h3></li>
}
</ul>
<p><a href="/vendors/new">Add Vendor</a></p>
<p><a href="/">Back Home</a></p>